<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/base_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.itcast.mobileplaybj83.MainActivity">

    <!--标题栏-->
    <LinearLayout
        android:background="@drawable/base_titlebar_bg"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <!--视频-->
        <TextView
            android:id="@+id/main_tab_video"
            android:textColor="@color/greed"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="视频"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--音乐-->
        <TextView
            android:id="@+id/main_tab_audio"
            android:textColor="@color/halfwhite"
            android:layout_weight="1"
            android:text="音乐"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!--指示器-->
    <ImageView
        android:src="@color/greed"
        android:id="@+id/main_indicate"
        android:layout_width="55dp"
        android:layout_height="2dp" />
    <!--播放列表页-->

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
